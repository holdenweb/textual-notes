#main-window {
    align: center middle;
    Select { outline: none; }
    NoteForm #selections { height: 3; }
}
NoteForm Vertical {
    keyline: thin blue;
    #selections {
        height: 3;
    }
    #otyp-sel {
        width: 2fr;
    }
    #inst-sel {
        width: 3fr;
    }
    #info {
        width: 6fr;
        #content {
            height: 1fr;
        }
    }
    #operations {
        min-width: 12;
        width: 1fr;
    }
    #selections {
        height: auto;
    }
}

Placeholder {
    border: none;
    min-height: 1;
}
